    align-items: center;
    justify-content: center;
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    font-size: var(--text-3xl);
    color: var(--color-primary);
    margin-bottom: var(--space-6);
}

.lab-content h3 {
    font-family: var(--font-primary);
